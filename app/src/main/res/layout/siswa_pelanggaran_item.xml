<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Kategori Pelanggaran Sekolah"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDataPelanggaranKatergori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Buku, Majalah, Video, Kaset Terlarang, dan Handphone"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCountPelanggaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Banyak Pelanggaran "
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:padding="10dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/vect_pelanggaran" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>