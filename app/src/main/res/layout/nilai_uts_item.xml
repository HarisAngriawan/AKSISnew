<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:background="@color/lightgray"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvUtsNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMA SISWA" />

        <TextView
            android:id="@+id/tvUtsNisn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMA NISN"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvUtsNama"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/edittext_custom"
            android:id="@+id/edNilaiUts"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edNilaiUts"
            android:layout_alignStart="@+id/edNilaiUts"
            android:layout_alignTop="@+id/edNilaiUts"
            android:layout_alignEnd="@+id/edNilaiUts"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="2dp"
            android:textAlignment="center"
            android:layout_marginBottom="0dp"
            android:text="UTS" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>