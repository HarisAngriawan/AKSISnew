<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59ADFF">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/backslash" />

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress_screen"
        android:layout_centerHorizontal="true"
        android:text="0%"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progress_screen"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:progressBackgroundTint="@color/gradient"
        android:progressBackgroundTintMode="src_in"
        android:progressTint="@android:color/holo_red_light"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_screen"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/amaranth"
        android:text="PT.Bina Insan Lestari"
        android:textSize="12sp" />
</RelativeLayout>